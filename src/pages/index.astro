---
import { getCollection } from "astro:content";
import BaseLayout from "../components/BaseLayout.astro";

// Get all posts and filter out drafts
const allPosts = await getCollection("posts", ({ data }) => {
  return !data.draft;
});

// Sort posts by date (newest first)
const posts = allPosts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
}
---

<BaseLayout
  title=""
  description="Thoughts on technology and software development. Either learning from mistakes or going into a rabbit hole!"
>
  <div class="container">
    <div class="home-header">
      <h1>Patel of Thoughts</h1>
      <p class="text-secondary">
        Thoughts on technology and software development. Either learning from
        mistakes or going into a rabbit hole!
      </p>
      <div class="search">
        <label class="search-label" for="post-search">Search posts</label>
        <input
          id="post-search"
          class="search-input"
          type="search"
          name="search"
          placeholder="Search by title, description, or tag"
          autocomplete="off"
        />
        <p class="search-hint text-small text-secondary">
          Type to filter posts instantly.
        </p>
        <p class="search-count text-small text-secondary" data-search-count>
          Showing {posts.length} posts.
        </p>
      </div>
    </div>

    <div class="posts-list" data-posts>
      {
        posts.map((post) => (
          <article
            class="post-card card"
            data-title={post.data.title.toLowerCase()}
            data-description={post.data.description.toLowerCase()}
            data-tags={post.data.tags.join(" ").toLowerCase()}
          >
            <a href={`/posts/${post.slug.split("/").pop()}`} class="post-link">
              {post.data.cover && (
                <img
                  src={post.data.cover}
                  alt={post.data.title}
                  class="post-card-cover"
                />
              )}
              <div class="post-content">
                <h2 class="post-title">{post.data.title}</h2>
                <p class="post-description text-secondary">
                  {post.data.description}
                </p>

                <div class="post-meta">
                  <time
                    datetime={post.data.date.toISOString()}
                    class="text-small text-secondary"
                  >
                    {formatDate(post.data.date)}
                  </time>

                  {post.data.tags.length > 0 && (
                    <div class="post-tags">
                      {post.data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </a>
          </article>
        ))
      }
    </div>
    <p class="no-results text-secondary text-small" hidden data-no-results>
      No posts matched your search. Try a different keyword.
    </p>
  </div>
</BaseLayout>

<script>
  const searchInput = document.querySelector("#post-search");
  const postsList = document.querySelector("[data-posts]");
  const noResults = document.querySelector("[data-no-results]");

  if (searchInput && postsList && noResults) {
    const postCards = Array.from(
      postsList.querySelectorAll("[data-title]"),
    );
    const totalPosts = postCards.length;
    const searchCount = document.querySelector("[data-search-count]");

    const escapeRegExp = (value) =>
      value.replace(/[.*+?^${}()|[\]\\]/g, "\\$&");

    const highlightText = (element, query) => {
      if (!element) return;
      const original = element.getAttribute("data-original-text") ?? "";
      if (!query) {
        element.textContent = original;
        return;
      }
      const regex = new RegExp(`(${escapeRegExp(query)})`, "gi");
      element.innerHTML = original.replace(regex, "<mark>$1</mark>");
    };

    const updateSearch = () => {
      const query = searchInput.value.trim().toLowerCase();
      let visibleCount = 0;

      postCards.forEach((card) => {
        const title = card.getAttribute("data-title") ?? "";
        const description = card.getAttribute("data-description") ?? "";
        const tags = card.getAttribute("data-tags") ?? "";
        const matches =
          query.length === 0 ||
          title.includes(query) ||
          description.includes(query) ||
          tags.includes(query);

        card.toggleAttribute("hidden", !matches);
        if (matches) {
          visibleCount += 1;
        }

        const titleElement = card.querySelector(".post-title");
        const descriptionElement = card.querySelector(".post-description");
        if (titleElement && !titleElement.hasAttribute("data-original-text")) {
          titleElement.setAttribute(
            "data-original-text",
            titleElement.textContent ?? "",
          );
        }
        if (
          descriptionElement &&
          !descriptionElement.hasAttribute("data-original-text")
        ) {
          descriptionElement.setAttribute(
            "data-original-text",
            descriptionElement.textContent ?? "",
          );
        }
        if (matches) {
          highlightText(titleElement, query);
          highlightText(descriptionElement, query);
        } else {
          highlightText(titleElement, "");
          highlightText(descriptionElement, "");
        }
      });

      noResults.toggleAttribute("hidden", visibleCount !== 0);
      if (searchCount) {
        searchCount.textContent =
          visibleCount === totalPosts
            ? `Showing ${totalPosts} posts.`
            : `Showing ${visibleCount} of ${totalPosts} posts.`;
      }
    };

    const focusResult = (direction) => {
      const visibleLinks = postCards
        .filter((card) => !card.hasAttribute("hidden"))
        .map((card) => card.querySelector(".post-link"))
        .filter(Boolean);
      if (visibleLinks.length === 0) {
        return;
      }
      const currentIndex = visibleLinks.findIndex(
        (link) => link === document.activeElement,
      );
      const nextIndex =
        currentIndex === -1
          ? direction === "up"
            ? visibleLinks.length - 1
            : 0
          : direction === "up"
            ? (currentIndex - 1 + visibleLinks.length) % visibleLinks.length
            : (currentIndex + 1) % visibleLinks.length;
      visibleLinks[nextIndex]?.focus();
    };

    searchInput.addEventListener("input", updateSearch);
    searchInput.addEventListener("keydown", (event) => {
      if (event.key === "ArrowDown") {
        event.preventDefault();
        focusResult("down");
      }
      if (event.key === "ArrowUp") {
        event.preventDefault();
        focusResult("up");
      }
      if (event.key === "Escape") {
        searchInput.value = "";
        updateSearch();
      }
    });
    updateSearch();
  }
</script>

<style>
  .home-header {
    position: sticky;
    top: 0;
    z-index: 10;
    margin-bottom: var(--space-2xl);
    background-color: var(--color-bg);
    padding: var(--space-md) 0;
  }

  .home-header h1 {
    margin-top: 0;
    margin-bottom: var(--space-sm);
  }

  .search {
    margin-top: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .search-label {
    font-weight: 600;
  }

  .search-input {
    padding: 0.65rem 0.75rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background-color: var(--color-bg);
    color: var(--color-text);
    font-size: var(--font-size-base);
    transition:
      border-color var(--transition-fast),
      box-shadow var(--transition-fast);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-accent) 25%, transparent);
  }

  .search-hint {
    margin: 0;
  }

  .search-count {
    margin: 0;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .post-card {
    transition:
      transform var(--transition-fast),
      border-color var(--transition-fast);
  }

  .post-card:hover {
    transform: translateY(-2px);
  }

  .post-card-cover {
    width: 200px;
    height: auto;
    border-radius: var(--radius-lg);
    display: block;
    object-fit: cover;
  }

  .post-link {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-lg);
    align-items: start;
    color: inherit;
  }

  .post-link:hover {
    text-decoration: none;
  }

  .post-title {
    margin-top: 0;
    margin-bottom: var(--space-sm);
    font-size: var(--font-size-2xl);
    border: none;
    padding: 0;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .post-link:hover .post-title {
    color: var(--color-accent);
  }

  .post-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
    border-radius: var(--radius-md);
  }

  .post-description {
    margin-bottom: var(--space-md);
    line-height: var(--line-height-relaxed);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .post-tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
  }

  .post-content {
    order: 0;
  }

  .post-card-cover {
    order: 1;
  }

  .no-results {
    margin-top: var(--space-lg);
  }

  mark {
    background-color: color-mix(in srgb, var(--color-accent) 25%, transparent);
    color: inherit;
    padding: 0 0.1em;
    border-radius: var(--radius-sm);
  }

  @media (max-width: 720px) {
    .post-link {
      grid-template-columns: 1fr;
    }

    .post-card-cover {
      width: 100%;
      height: auto;
      order: 0;
    }

    .post-content {
      order: 1;
    }
  }
</style>
