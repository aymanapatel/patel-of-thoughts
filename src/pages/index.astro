---
import { getCollection } from "astro:content";
import BaseLayout from "../components/BaseLayout.astro";

// Get all posts and filter out drafts
const allPosts = await getCollection("posts", ({ data }) => {
  return !data.draft;
});

// Sort posts by date (newest first)
const posts = allPosts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
}
---

<BaseLayout
  title=""
  description="Thoughts on technology and software development. Either learning from mistakes or going into a rabbit hole!"
>
  <div class="container">
    <div class="hidden" data-posts-data>{JSON.stringify(posts.map(post => ({
      slug: post.slug.split("/").pop(),
      title: post.data.title,
      description: post.data.description,
      date: formatDate(post.data.date),
      cover: post.data.cover
    })))}</div>
    <div class="home-header">
      <h1>Patel of Thoughts</h1>
      <p class="text-secondary">
        Thoughts on technology and software development. Either learning from
        mistakes or going into a rabbit hole!
      </p>
    </div>

    <div class="posts-list" data-posts>
      {
        posts.map((post) => (
          <article class="post-card card">
            <a href={`/posts/${post.slug.split("/").pop()}`} class="post-link">
              {post.data.cover && (
                <img
                  src={post.data.cover}
                  alt={post.data.title}
                  class="post-card-cover"
                />
              )}
              <div class="post-content">
                <h2 class="post-title">{post.data.title}</h2>
                <p class="post-description text-secondary">
                  {post.data.description}
                </p>

                <div class="post-meta">
                  <time
                    datetime={post.data.date.toISOString()}
                    class="text-small text-secondary"
                  >
                    {formatDate(post.data.date)}
                  </time>

                  {post.data.tags.length > 0 && (
                    <div class="post-tags">
                      {post.data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </a>
          </article>
        ))
      }
    </div>
    <p class="no-results text-secondary text-small" hidden data-no-results>
      No posts matched your search. Try a different keyword.
    </p>
  </div>
</BaseLayout>

<style>
  .hidden {
    display: none;
  }
</style>

<script>
  // Search functionality is now handled in BaseLayout with modal search
</script>

<style>
  .home-header {
    margin-bottom: var(--space-2xl);
  }

  .home-header h1 {
    margin-top: 0;
    margin-bottom: var(--space-sm);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .post-card {
    transition:
      transform var(--transition-fast),
      border-color var(--transition-fast);
  }

  .post-card:hover {
    transform: translateY(-2px);
  }

  .post-card-cover {
    width: 200px;
    height: auto;
    border-radius: var(--radius-lg);
    display: block;
    object-fit: cover;
  }

  .post-link {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-lg);
    align-items: start;
    color: inherit;
  }

  .post-link:hover {
    text-decoration: none;
  }

  .post-title {
    margin-top: 0;
    margin-bottom: var(--space-sm);
    font-size: var(--font-size-2xl);
    border: none;
    padding: 0;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .post-link:hover .post-title {
    color: var(--color-accent);
  }

  .post-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
    border-radius: var(--radius-md);
  }

  .post-description {
    margin-bottom: var(--space-md);
    line-height: var(--line-height-relaxed);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .post-tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
  }

  .post-content {
    order: 0;
  }

  .post-card-cover {
    order: 1;
  }

  .no-results {
    margin-top: var(--space-lg);
  }

  mark {
    background-color: color-mix(in srgb, var(--color-accent) 25%, transparent);
    color: inherit;
    padding: 0 0.1em;
    border-radius: var(--radius-sm);
  }
</style>
